<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/uploadbkg"
    tools:context=".UploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="300dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp">

    <EditText
        android:id="@+id/uploadMoleculeName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/green_border"
        android:layout_marginTop="20dp"
        android:hint="Enter Owner Name"
        android:layout_marginEnd="10dp"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:textColor="@color/green" />

    <EditText
        android:id="@+id/uploadHeatCapacity"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/green_border"
        android:layout_marginTop="20dp"
        android:hint="Enter Vehicle Brand"
        android:layout_marginEnd="10dp"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:textColor="@color/green" />

    <EditText
        android:id="@+id/uploadMoleculePH"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/green_border"
        android:layout_marginTop="20dp"
        android:hint="Enter Vehicle RTO"
        android:layout_marginEnd="10dp"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:textColor="@color/green" />

    <EditText
        android:id="@+id/uploadMolecularFormula"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/green_border"
        android:layout_marginTop="20dp"
        android:hint="Enter Vehicle Number"
        android:layout_marginEnd="10dp"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:textColor="@color/green" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="Save"
        android:textSize="18sp"
       app:cornerRadius = "20dp" />

    </LinearLayout>
</LinearLayout>